extends ../layout

block content
  h1 Tweet Form
  div(class="d-flex flex-row justify-content-center")
    div(class="flex-fill d-flex flex-row justify-content-center")
      form(class="card w-50 mt-5" action= tweet._id ? `/tweets/update/${tweet._id}` : '/tweets' method="POST")
        div(class="card-header")
          h5(class="card-title")= tweet._id ? 'Edit Tweet' : 'New Tweet'
        div(class="card-body")
          textarea(class="form-control" name="content" placeholder="Tweet content")= tweet.content
        if errors
          ul(class="my-2")
            for error in errors
              li(class="text-danger ") #{error}
        div(class="card-footer d-flex justify-content-end gap-2")
          if tweet._id
            button(class="btn btn-primary" type="submit") Update Tweet
          else
            button(class="btn btn-primary" type="submit") Tweet
          a(class="btn btn-danger" href="/tweets") Cancel