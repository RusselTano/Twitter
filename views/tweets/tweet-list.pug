if tweets
  each tweet in tweets  
    div(class="card tweet-element")
      div(class="card-body d-flex flex-column gap-3")
        div(class="d-flex flex-row align-items-center pb-2")
          img(width="40" height="40" class="pe-3" src=tweet.author.avatar)
          span(class="flex-fill")= tweet.author.username
          if editable && tweet.author._id.toString() === currentUser._id.toString()
            div(class="d-flex flex-row justify-content-center")
              a(class="fa-solid fa-pen-to-square pe-2 text-success" href="/tweets/edit/" + tweet._id)
              a(class="fa-solid fa-trash text-danger" href="/tweets/delete/" + tweet._id)
        div= tweet.content


//- if tweets
//-       each tweet, i in tweets
        div(class="card mb-3")
          div(class="card__header")
            h5(class="card-title") Tweet #{i + 1}
          div(class="card__body")
            p(class="card__text" tweetid=tweet._id) #{tweet.content} - #{tweet.author}
          div(class="d-flex justify-content-end gap-2")
            a(class="btn btn-primary", href=`/tweets/edit/${tweet._id}`) edit
            a(class="btn btn-danger ", href=`/tweets/delete/${tweet._id}`)  Delete