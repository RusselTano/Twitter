nav.navbar.navbar-expand-sm.navbar-light.bg-light.px-5
  a.navbar-brand(href="/tweets") 
    img(src="/img/icon-twitter.png", width="30", height="30", class="d-inline-block align-top", alt="Twitter Icon")
  button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
    span.navbar-toggler-icon
  div#navbarNav.collapse.navbar-collapse
    if isAuthenticated
      form.form-inline.my-2.my-lg-0
        div.d-flex(style="gap: 15px;")
          input.form-control.mr-sm-2(type="search", placeholder="Search", aria-label="Search")
          button.btn.btn-outline-primary.my-2.my-sm-0(type="submit") Search
      ul.navbar-nav.ms-auto.d-flex(style="gap: 15px;")
        li.nav-item
          a.btn.btn-primary.btn-tweet(href="/tweets/new") Tweet
        li.nav-item
          a.nav-link(href="/auth/signout") Déconnexion
    else
      ul.navbar-nav.ms-auto.d-flex(style="gap: 15px;")
        li.nav-item
          a.nav-link(href="/auth/signin/form") Connexion
        li.nav-item
          a.nav-link(href="/users/signup/form") Inscription







