div.profile-container.bg-white.mr-3.d-flex.flex-column.justify-content-center.align-items-center
  form(id="form-container" class="d-flex.justify-content-center.align-items-center" action="/users/update/image" method="POST" enctype="multipart/form-data")
    input(type="file" name="avatar" class="d-none" id="input-avatar")
    img(src=user.avatar class="img-fluid rounded-circle" alt="Profile Icon" )
  div
    p= `${user.username} (${user.local.email})`
  div(class="d-flex justify-content-center align-items-center gap-2 my-3")
    div(class="flex-fill")
      p 
        strong Tweets 
        br
        span #{tweets.length}
    div(class="flex-fill")
      p 
        strong Following 
        br
        span 5
      //- | #{currentUser.following.length}
    div(class="flex-fill")
      p 
        strong Followers 
        br
        span 8
      //- | #{currentUser.followers.length}



